                      input#empState.form-control(type='text', placeholder='State')
                  .form-group
                    label(for='duties') Description of Duties:
                    textarea#duties.form-control(rows='5')
              .form-group
                label(for='skills') General Applicant Skills:
                textarea#skills.form-control(rows='3')
